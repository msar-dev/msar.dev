---
type Props = {
    className?: string;
};

const { className } = Astro.props;
---

<a href="/" class={className}>
    <svg
        class="logo-svg h-10"
        viewBox="0 0 192 192"
        xmlns="http://www.w3.org/2000/svg"
        ><path
            fill="none"
            stroke="#000000"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="12"
            d="M38 83h30"></path>
        <path class="circle" d="M16 107a8 8 0 1 1 16 0 8 8 0 1 1-16 0"></path>
        <path
            fill="none"
            stroke="#000000"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="12"
            d="M96 34v124m28-32 6.9-18m39.1 18-6.9-18m0 0L147 66l-16.1 42m32.2 0h-32.2"
        ></path></svg
    >
    <span class="font-semibold text-slate-900 dark:text-white text-2xl ml-2"
        >msar</span
    >
</a>

<style>
    .logo-svg,
    .logo-svg path {
        @apply dark:text-white dark:stroke-white;
    }
    .logo-svg .circle {
        @apply fill-slate-900 dark:fill-white;
    }
</style>
