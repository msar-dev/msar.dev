---
import Container from "./Container.astro";
import Developer from "./icons/Developer.astro";
import { info } from "../data";
---

<div class="relative" id="home">
    <div
        aria-hidden="true"
        class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20 -z-10"
    >
        <div
            class="blur-[106px] h-56 bg-gradient-to-br from-teal-700 to-teal-400 dark:from-teal-700"
        >
        </div>
        <div
            class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"
        >
        </div>
    </div>
    <Container>
        <section
            class="flex flex-col items-center xl:flex-row justify-center relative pt-36 ml-auto"
        >
            <div
                class="flex flex-col md:w-[590px] text-slate-800 dark:text-teal-100"
            >
                <h1
                    class="text-center font-extrabold leading-snug md:leading-snug md:text-6xl md:text-left text-5xl"
                >
                    IT and Digitalization Make Your Business
                    <span class="text-primary">More Efficient.</span>
                </h1><p class="mb-10 leading-10 mt-8 text-lg">
                    Accelerate your business processes with the help of
                    digitalization. <span class="text-teal-700 italic"
                        >Morse Software and Research</span
                    > delivers custom software solutions, tailored to your
                    individual needs.
                </p><a
                    href={`mailto:${info.email}`}
                    class="relative flex h-11 w-full items-center justify-center text-white px-6 before:absolute before:inset-0 before:rounded-full before:-z-10 before:bg-primary before:hover:bg-teal-600 before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max"
                    target="_blank">Contact us â†’</a
                >
            </div><div class="md:h-[650px] md:w-[650px] mt-16 md:mt-0">
                <Developer className="h-full w-full" />
            </div>
        </section>
    </Container>
</div>
